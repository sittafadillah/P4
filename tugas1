#include <iostream>
using namespace std;

int main(){
    float operand1;
    float operand2;
    float hasil;
    int menu;

    cout<<"0. Keluar"<<endl;
    cout<<"1. Tambah"<<endl;
    cout<<"2. Kurang"<<endl;
    cout<<"3. Kali"<<endl;
    cout<<"4. Bagi"<<endl;
    cout<<"Masukan Pilihan:";
    cin>>menu;

    while(menu!=0){
        cout<<"Operand 1:";
        cin>>operand1;
        cout<<"operand 2:";
        cin>>operand2;

        if(menu==1){
            hasil = operand1+operand2;
            cout<<operand1<<"+"<<operand2<<"="<<hasil;
        }else if(menu==2) {
            hasil = operand1-operand2;
            cout<<operand1<<" - "<<operand2<<"="<<hasil;
        }
        else if(menu==3) {
            hasil = operand1*operand2;
            cout<<operand1<<" * "<<operand2<<"="<<hasil;
        }
        else if(menu==4) {
            hasil = operand1/operand2;
            cout<<operand1<<" / "<<operand2<<"="<<hasil;
        }
        cout<<endl;
        cout<<"0. Keluar"<<endl;
        cout<<"1. Tambah"<<endl;
        cout<<"2. Kurang"<<endl;
        cout<<"Masukan Pilihan : ";
        cin>>menu;
    }
    cout<<"Bye Bye";
}
